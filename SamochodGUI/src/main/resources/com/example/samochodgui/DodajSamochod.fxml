<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.samochodgui.DodajSamochodController"
      style="-fx-padding: 20;">

    <Label text="Dodaj nowy samochód" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Model:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="modelPole" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Numer rejestracyjny:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="rejestracjaPole" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Waga (kg):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="wagaPole" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Prędkość maks. (km/h):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="predkoscPole" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Label text="Silnik:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="silnikBox" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Skrzynia biegów:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <ComboBox fx:id="skrzyniaBox" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Zatwierdź" fx:id="zatwierdzPrzycisk" onAction="#naZatwierdzPrzycisk"/>
        <Button text="Anuluj" fx:id="anulujPrzycisk" onAction="#naAnulujPrzycisk"/>
    </HBox>

</VBox>
